{
	// Change theme based on OS theme
	"window.autoDetectColorScheme": true,
	
	// Change the Activity bar color to light for light themes
	"workbench.colorCustomizations": {
		"[Default Light*]":{
			"activityBar.background": "#dddcdc",
			"activityBar.foreground": "#000000"
		},
	},

	// Turn off telemetry
	"telemetry.telemetryLevel": "off",
	
	// Turn off experiments
	"workbench.enableExperiments": false,
	
	// Use tab instead of spaces
	"editor.insertSpaces": false,

	// No presistent terminal
	"terminal.integrated.enablePersistentSessions": false,

	// Get code snippets on top
	"editor.snippetSuggestions": "top",

	// Font from nerd font
	// "editor.fontFamily": "Cascadia Code",
	"editor.fontFamily": "CaskaydiaCove NF Mono",
	"editor.fontLigatures": true,

	// Code-runner settings
	// disable telemetry for code-runner
	"code-runner.enableAppInsights": false,
	"code-runner.runInTerminal": true,
	
	// Selects the first suggestion
	"editor.suggestSelection": "first",
	
	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
	
	// Files to unhide in the explorer
	"files.exclude": {
		"**/.classpath": true,
		"**/.factorypath": true,
		"**/.git": false,
		"**/.project": true,
		"**/.settings": true
	},

	// Enable the search bar at the top
	"window.commandCenter": true,
	
	// SQL formatter extension
	"sql-formatter.uppercase": true,
	"diffEditor.ignoreTrimWhitespace": false,
}